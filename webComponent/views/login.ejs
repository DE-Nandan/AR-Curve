<link rel="stylesheet" href="css/login.css">
<div class="main_container">
	<br><h1>ARCurve</h1><br>
	<div id="sign_up" class="center-block">
		<div class="left_part">
			<br><h2>Sign Up</h2>
			<br>
			<form action="/register" method="post">
				<div class="inputg">
					<div class="row">
						<div class="col">
						<input type="text" class="form-control" id="fname" placeholder="First name" style="border: 1px solid #141c1f;background-color: rgba(15, 15, 15, 0.7);">
					</div>
					<div class="col">
						<input type="text" class="form-control" id="lname" placeholder="Last name">
						</div>
					</div>
				</div>
				<div class="row inputg">
					<input type="text" class="form-control" name = "username" id="username" placeholder="Username" required>
				</div>    
				<div class="row inputg">
					<input type="email" class="form-control" name = "email" id="email" placeholder="Email" required>
				</div>                
				<div class="row inputg">
					<input type="password" class="form-control" name = "password" id="password" placeholder="Password" required>
				</div>                
				<div class="row inputg">
					<input type="password1" class="form-control" name = "password1" id="password1" placeholder="Confirm Password" required>
				</div>                
				<button type="submit" class="btn btn-outline-primary">Sign Up</button>
			</form>
			Already registered? <button type="button" class="btn dark_mode" onclick="toggleit();">Sign In</button>
		</div>
		<div class="right_part">
			<img src="./assets/metaverse_girl.jpg" alt="" srcset="">
		</div>
	</div>
	<div id="sign_in" class="center-block">
		<div class="left_part">
			<img src="./assets/metaverse2.png" alt="" srcset="">
		</div>
		<div class="right_part">
			<br><h2>Sign In</h2>
			<br>
			<form action="/login" class="text-center" method="post">
				<div class="inputg">
				<div class="row inputg">
					<input type="text" class="form-control" name = "username" placeholder="Username" required>
				</div>                
				<div class="row inputg">
					<input type="password" class="form-control" name ="password" placeholder="Password" required>
				</div>                
				<button type="submit" class="btn btn-outline-success">Sign In</button>
			</form>
			<br><br>
			Not registered yet? <button type="button" class="btn dark_mode" onclick="toggleit();">Sign Up</button>
		</div>
	</div>
</div>
<script src="/js/login.js"></script>