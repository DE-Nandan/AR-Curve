<link rel="stylesheet" href="css/login.css">
<div class="main_container">
	<br><h1>ARCurve</h1><br>
	<div id="sign_up" class="center-block">
		<div class="left_part">
			<br><h2>Sign Up</h2>
			<br>
			<form>
				<div class="inputg">
					<div class="row">
						<div class="col">
						<input type="text" class="form-control" placeholder="First name">
					</div>
					<div class="col">
						<input type="text" class="form-control" placeholder="Last name">
						</div>
					</div>
				</div>
				<div class="row inputg">
					<input type="text" class="form-control" placeholder="Username">
				</div>                
				<div class="row inputg">
					<input type="password" class="form-control" placeholder="Password">
				</div>                
				<div class="row inputg">
					<input type="password" class="form-control" placeholder="Confirm Password">
				</div>                
				<button type="button" class="btn btn-outline-primary">Sign Up</button>
			</form>
			Already registered? <button type="button" class="btn dark_mode" onclick="toggleit();">Sign In</button>
		</div>
		<div class="right_part">
			<img src="./assets/metaverse_girl.jpg" alt="" srcset="">
		</div>
	</div>
	<div id="sign_in" class="center-block">
		<div class="left_part">
			<img src="./assets/metaverse2.png" alt="" srcset="">
		</div>
		<div class="right_part">
			<br><h2>Sign In</h2>
			<br>
			<form class="text-center">
				<div class="inputg">
				<div class="row inputg">
					<input type="text" class="form-control" placeholder="Username">
				</div>                
				<div class="row inputg">
					<input type="password" class="form-control" placeholder="Password">
				</div>                
				<button type="button" class="btn btn-outline-success">Sign In</button>
			</form>
			<br><br>
			Not registered yet? <button type="button" class="btn dark_mode" onclick="toggleit();">Sign Up</button>
		</div>
	</div>
</div>
<script src="/js/login.js"></script>

